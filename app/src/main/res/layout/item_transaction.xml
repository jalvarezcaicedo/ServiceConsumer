<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/simple_margin_top">

    <RelativeLayout
        android:id="@+id/transaction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/regular_margin">

        <TextView
            android:id="@+id/transaction_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Customer ID" />

        <TextView
            android:id="@+id/transaction_prod_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/transaction_id"
            android:layout_marginTop="@dimen/simple_margin_top"
            android:text="Number xxxxxxxxxxxxxx" />

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/transaction_id"
            android:layout_alignParentEnd="true"
            android:text="STATUS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/transaction_id"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/transaction_status"
            android:text="Channel X"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/transaction_prod_number"
            android:layout_alignParentEnd="true"
            android:text="Amount XXXXXXX" />

        <TextView
            android:id="@+id/transaction_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/transaction_amount"
            android:layout_marginTop="@dimen/simple_margin_top"
            android:text="Tx #XXXXXXX" />

    </RelativeLayout>

</android.support.v7.widget.CardView>